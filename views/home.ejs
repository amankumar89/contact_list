<!DOCTYPE html>
<html>
  <head>
    <title><%= locals.title %></title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <div id="container">
      <h1 id="page-heading">
        <i class="fa-solid fa-address-book"></i>
        My Contacts List
      </h1>
      <ul>
        <% for(let i of contact_list){%>
        <li>
          <p><%= i.name %></p>
          <p><%= i.phone %></p>

          <div class="delete-btn">
            <a href="/delete-contact/?id=<%= i._id %>">
              <i class="fas fa-window-close"></i>
            </a>
          </div>
        </li>
        <% } %>
      </ul>
    </div>
    <form action="/create-contact" method="post">
      <p id="form-heading">Enter Details to Add Contacts</p>

      <input type="text" name="name" placeholder="Enter Name" required />

      <input type="number" name="phone" placeholder="Enter Phone No" required />

      <button type="submit">Add</button>
    </form>

    <script src="/js/home.js"></script>
  </body>
</html>
